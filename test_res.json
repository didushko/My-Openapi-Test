{
    "audit": {
        "branches": {
            "**": {
                "discovery": {
                    "search": [
                        "**/*.json",
                        "**/*.yaml"
                    ]
                },
                "fail_on": {
                    "invalid_contract": true,
                    "issue_id": [
                        "v4-global-security"
                    ],
                    "score": {
                        "data": 10,
                        "security": 0
                    },
                    "severity": {
                        "data": "critical",
                        "security": "critical"
                    }
                }
            }
        }
    }
}